@model ApplicationCore.ViewModel.Network.UtilityViewModel

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseInfoTargetId" class="control-label"></label>
                <input asp-for="BaseInfoTargetId" class="form-control" />
                <span asp-validation-for="BaseInfoTargetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainName" class="control-label"></label>
                <input asp-for="MainName" class="form-control" />
                <span asp-validation-for="MainName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NetworkInfoId" class="control-label"></label>
                <select asp-for="NetworkInfoId" class ="form-control" asp-items="ViewBag.NetworkInfoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseInfoColorId" class="control-label"></label>
                <input asp-for="BaseInfoColorId" class="form-control" />
                <span asp-validation-for="BaseInfoColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseInfoNatureId" class="control-label"></label>
                <input asp-for="BaseInfoNatureId" class="form-control" />
                <span asp-validation-for="BaseInfoNatureId" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
