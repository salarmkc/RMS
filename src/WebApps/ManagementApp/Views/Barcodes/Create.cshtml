@model ApplicationCore.ViewModel.Stuff.BarcodeViewModel
@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BarcodeStuff" class="control-label"></label>
                <input asp-for="BarcodeStuff" class="form-control" />
                <span asp-validation-for="BarcodeStuff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StuffId" class="control-label"></label>
                <select asp-for="StuffId" class ="form-control" asp-items="ViewBag.StuffId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDefault" /> @Html.DisplayNameFor(model => model.IsDefault)
                </label>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">بازگشت به لیست</a>
</div>

