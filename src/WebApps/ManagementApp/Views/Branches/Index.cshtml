@model IEnumerable<ApplicationCore.ViewModel.Branch.BranchViewModel>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">افزودن</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Measure.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetworkInfo.HostName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommercialCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Measure.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetworkInfo.HostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommercialCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.Id">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
