@model ApplicationCore.ViewModel.User.UserRoleViewModel

@{
    ViewData["Title"] = "Delete";
}



<h3>تائید حذف</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role.Name)
        </dd >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Relative)
        </dt>
        <dd class = "col-sm-10">
