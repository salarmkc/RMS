@model ApplicationCore.ViewModel.Branch.DrawerPaymentViewModel

@{
    ViewData["Title"] = "Edit";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentGroupId" class="control-label"></label>
                <select asp-for="PaymentGroupId" class="form-control" asp-items="ViewBag.PaymentGroupId"></select>
                <span asp-validation-for="PaymentGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrawerId" class="control-label"></label>
                <select asp-for="DrawerId" class="form-control" asp-items="ViewBag.DrawerId"></select>
                <span asp-validation-for="DrawerId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
           
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

